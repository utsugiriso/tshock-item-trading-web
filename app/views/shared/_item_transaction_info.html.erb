<% case item.transaction_type %>
<% when "coin" %>
  <ul class="list-group list-group-horizontal">
    <li class="list-group-item">
      <img src="<%= Item.image_url(Item::PLATINUM_COIN_ID) %>">
      <%= padding_coin_count item.platinum_coin_count %>
    </li>
    <li class="list-group-item">
      <img src="<%= Item.image_url(Item::GOLD_COIN_ID) %>">
      <%= padding_coin_count item.gold_coin_count %>
    </li>
    <li class="list-group-item">
      <img src="<%= Item.image_url(Item::SILVER_COIN_ID) %>">
      <%= padding_coin_count item.silver_coin_count %>
    </li>
    <li class="list-group-item">
      <img src="<%= Item.image_url(Item::COPPER_COIN_ID) %>">
      <%= padding_coin_count item.copper_coin_count %>
    </li>
  </ul>
<% when "barter" %>
<% else %>
  <% raise '未知の取引タイプ' %>
<% end %>
